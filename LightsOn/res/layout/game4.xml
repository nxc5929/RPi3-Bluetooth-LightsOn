<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lightson.lightson.MainActivity" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:rowCount="4"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true" >

        <Button
            android:id="@+id/button4_1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_4"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="0"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_5"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_6"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_7"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_8"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="1"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_9"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_10"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_11"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_12"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="2"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_13"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_14"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_15"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />

        <Button
            android:id="@+id/button4_16"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="3"
            android:minHeight="55dp"
            android:minWidth="75dp"
            android:onClick="selected"
            android:text="@string/button" />
    </GridLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="@string/game4"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="startGame"
        android:text="@string/startgame" />

    <TextView
        android:id="@+id/brightnessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="Brightness" />

    <Button
        android:id="@+id/brightnessDown"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/gridLayout1"
        android:layout_alignTop="@+id/brightnessUp"
        android:onClick="brightness"
        android:text="Down" />

    <Button
        android:id="@+id/brightnessUp"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_below="@+id/button17"
        android:layout_marginLeft="12dp"
        android:onClick="brightness"
        android:text="Up" />

</RelativeLayout>